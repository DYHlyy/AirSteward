<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/Room"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/material_blue_grey_50"
        app:cardElevation="10dp"
        app:layout_heightPercent="10%"
        app:layout_marginStartPercent="25%"
        app:layout_marginTopPercent="10%"
        app:layout_widthPercent="50%">

    </android.support.v7.widget.CardView>

    <!-- column 1 -->

    <android.support.v7.widget.CardView
        style="@style/Room"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/material_blue_100"
        app:cardElevation="10dp"
        app:layout_heightPercent="30%"
        app:layout_marginStartPercent="5%"
        app:layout_marginTopPercent="20%"
        app:layout_widthPercent="30%">

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/Room"
        android:layout_width="96dp"
        app:cardBackgroundColor="@color/material_yellow_100"
        app:cardElevation="10dp"
        app:layout_heightPercent="20%"
        app:layout_marginStartPercent="10%"
        app:layout_marginTopPercent="50%"
        app:layout_widthPercent="25%">

    </android.support.v7.widget.CardView>

    <!-- column 2 -->

    <!-- column 3 -->

    <android.support.v7.widget.CardView
        style="@style/Room"
        android:layout_gravity="end"
        app:cardBackgroundColor="@color/material_yellow_100"
        app:cardElevation="10dp"
        app:layout_heightPercent="25%"
        app:layout_marginEndPercent="10%"
        app:layout_marginTopPercent="65%"
        app:layout_widthPercent="25%">

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/room3"
        style="@style/Room"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/material_green_100"
        app:cardElevation="10dp"
        app:layout_heightPercent="20%"
        app:layout_marginStartPercent="20%"
        app:layout_marginTopPercent="70%"
        app:layout_widthPercent="15%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="卫生间" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/room2"
        style="@style/Room"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/material_blue_grey_50"
        app:cardElevation="10dp"
        app:layout_heightPercent="70%"
        app:layout_marginStartPercent="35%"
        app:layout_marginTopPercent="20%"
        app:layout_widthPercent="30%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="客厅" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/room1"
        style="@style/Room"
        android:layout_gravity="end"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/material_blue_100"
        app:cardElevation="10dp"
        app:layout_heightPercent="45%"
        app:layout_marginEndPercent="5%"
        app:layout_marginTopPercent="20%"
        app:layout_widthPercent="30%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="主卧" />

    </android.support.v7.widget.CardView>


</android.support.percent.PercentFrameLayout>